# SportsDataIO (primary odds + stats provider)
SPORTSDATA_API_KEY=your_sportsdataio_key_here

# OddsAPI (fallback odds provider)
ODDS_API_KEY=your_oddsapi_key_here

# Cache TTL in seconds (21600 = 6 hours for production)
# Historical player stats don't change, so longer cache = fewer API calls
SPORTSDATA_CACHE_TTL=21600

# Set to production on Vercel
NODE_ENV=production
